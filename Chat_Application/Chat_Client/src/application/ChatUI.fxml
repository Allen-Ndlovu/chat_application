<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.ChatController">
    <TextArea fx:id="chatArea" prefHeight="300" prefWidth="580" editable="false"/>
    <HBox spacing="10">
        <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#sendMessage"/>
    </HBox>
</VBox>
